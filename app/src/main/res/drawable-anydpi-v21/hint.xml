<!-- drawable/brightness-1.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle" >
            <solid
                android:color="@color/colorBorderHint" />
            <stroke android:width="1dp" android:color="@color/colorBorderHint" />
            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
            <corners android:radius="10dip" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle" >
            <solid
                android:color="@color/colorHint" />
            <padding android:left="10dp"
                android:top="2dp"
                android:right="10dp"
                android:bottom="2dp" />
            <corners android:radius="10dip" />

        </shape>
    </item>
</layer-list>