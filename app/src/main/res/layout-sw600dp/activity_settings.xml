<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginBottom="43dp"
        android:background="@color/titleOfForms"
        android:gravity="center"
        android:text="НАСТРОЙКИ"
        android:textColor="@color/colorTextTitleBeforeTable"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="МУЗЫКА"
        android:textColor="@color/colorTextEditOfSeekBar"
        android:textSize="14sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/musicSeekBar"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:max="100"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:progressDrawable="@drawable/seekbar_progress"
        android:thumb="@drawable/seekbar_thumb" />

    <TextView
        android:id="@+id/txtEffects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="ЭФФЕКТЫ"
        android:textColor="@color/colorTextEditOfSeekBar"
        android:textSize="14sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/effectSeekBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:max="100"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:progressDrawable="@drawable/seekbar_progress"
        android:thumb="@drawable/seekbar_thumb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="91dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="ВРЕМЯ ОЖИДАНИЯ"
            android:textColor="@color/colorTextEditOfSeekBar"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editWaitTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorTextEditWaitTime"
            android:ems="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Name"
            android:textColor="@color/colorTextEditOfSeekBar" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="МИН."
            android:textColor="@color/colorTextEditOfSeekBar"
            android:textSize="14sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </FrameLayout>

        <ImageView
            android:id="@+id/switcherTimer"
            android:layout_width="102dp"
            android:layout_height="27dp"
            app:srcCompat="@drawable/button_on_wait" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtAttention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:text="ВНИМАНИЕ"
        android:textColor="@color/colorTextEditOfSeekBar"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textAttention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:text="@string/title_attention1"
        android:textColor="@color/colorTextEditOfSeekBar"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="220dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_weight="0"
            android:text="АДРЕС СЕРВЕРА"
            android:textColor="@color/colorTextEditOfSeekBar"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@color/colorTextEditWaitTime"
            android:ems="1"
            android:inputType="textPersonName"
            android:text="Name"
            android:textColor="@color/colorTextEditOfSeekBar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnSave"
            android:layout_width="177dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/button_save_option_pressed" />
    </LinearLayout>
</LinearLayout>