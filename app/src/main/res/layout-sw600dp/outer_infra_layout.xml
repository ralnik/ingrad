<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/titleOfForms"
            android:gravity="center"
            android:text="ВНЕШНЯЯ ИНФРАСТРУКТУРА"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="13dp"
            app:srcCompat="@drawable/button_close" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/firstButtonsPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnChildgarden"
            android:layout_width="116dp"
            android:layout_height="79dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/button_childgarden" />

        <ImageView
            android:id="@+id/btnSchools"
            android:layout_width="116dp"
            android:layout_height="79dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/button_schools" />

        <ImageView
            android:id="@+id/btnMedicine"
            android:layout_width="116dp"
            android:layout_height="79dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/button_medicine" />

        <ImageView
            android:id="@+id/btnSport"
            android:layout_width="116dp"
            android:layout_height="79dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/button_sport" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondButtonsPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnObjectOfCreation"
            android:layout_width="116dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/button_object_of_creation" />

        <ImageView
            android:id="@+id/btnBusinessCenter"
            android:layout_width="116dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/button_business_center" />

        <ImageView
            android:id="@+id/btnShops"
            android:layout_width="116dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/button_shops" />

        <FrameLayout
            android:layout_width="116dp"
            android:layout_height="91dp"
            android:layout_weight="1">

        </FrameLayout>
    </LinearLayout>
</LinearLayout>