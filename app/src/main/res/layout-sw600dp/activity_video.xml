<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    android:orientation="vertical"
    tools:context=".activity.video.VideoActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/titleOfForms"
            android:gravity="center"
            android:text="ВИДЕО"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/button_close"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="13dp"
            app:srcCompat="@drawable/button_close" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">
            <ImageView
                android:id="@+id/buttonVideo1"
                android:layout_width="@dimen/buttons_width"
                android:layout_height="@dimen/buttons_height"
                android:layout_marginRight="@dimen/buttons_marginRight"
                android:scaleType="centerCrop"
                android:src="@drawable/video_1"/>
            <ImageView
                android:id="@+id/buttonVideo2"
                android:layout_width="@dimen/buttons_width"
                android:layout_height="@dimen/buttons_height"
                android:layout_marginRight="@dimen/buttons_marginRight"
                android:scaleType="centerCrop"
                android:src="@drawable/video_2"/>
            <ImageView
                android:id="@+id/buttonVideo3"
                android:layout_width="@dimen/buttons_width"
                android:layout_height="@dimen/buttons_height"
                android:layout_marginRight="@dimen/buttons_marginRight"
                android:scaleType="centerCrop"
                android:src="@drawable/video_3"/>
            <ImageView
                android:id="@+id/buttonVideo4"
                android:layout_width="@dimen/buttons_width"
                android:layout_height="@dimen/buttons_height"
                android:scaleType="centerCrop"
                android:src="@drawable/video_4"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>