<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    android:orientation="vertical"
    tools:context=".activity.from_window.FromWindowActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/titleOfForms"
            android:gravity="center"
            android:text="ВИДЫ ИЗ ОКНА"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/button_close"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="13dp"
            app:srcCompat="@drawable/button_close" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/planRiverskyFromWindowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <ImageView
            android:id="@+id/planRiverskyFromWindow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/riversky_plan_from_window"/>
        <FrameLayout
            android:id="@+id/hiddenButtonRiverskyBuild1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:translationX="45dp"
            android:translationY="170dp"/>
        <FrameLayout
            android:id="@+id/hiddenButtonRiverskyBuild2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:translationX="390dp"
            android:translationY="180dp"/>
        <FrameLayout
            android:id="@+id/hiddenButtonRiverskyBuild3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:translationX="620dp"
            android:translationY="170dp"/>
        <FrameLayout
            android:id="@+id/hiddenButtonRiverskyBuild4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:translationX="170dp"
            android:translationY="320dp"/>
        <FrameLayout
            android:id="@+id/hiddenButtonRiverskyBuild5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:translationX="505dp"
            android:translationY="320dp"/>
        <ImageView
            android:id="@+id/buttonsRiverskyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/planForiverFromWindowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <ImageView
            android:id="@+id/planForiverFromWindow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/foriver_plan_from_window"/>
        <FrameLayout
            android:id="@+id/hiddenButtonForiverBuild1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:translationX="65dp"
            android:translationY="150dp"/>
        <FrameLayout
            android:id="@+id/hiddenButtonForiverBuild2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:translationX="265dp"
            android:translationY="130dp"/>

        <FrameLayout
            android:id="@+id/hiddenButtonForiverBuild3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:translationX="35dp"
            android:translationY="300dp"/>
        <FrameLayout
            android:id="@+id/hiddenButtonForiverBuild4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:translationX="295dp"
            android:translationY="290dp"/>

        <FrameLayout
            android:id="@+id/hiddenButtonForiverBuild5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:translationX="510dp"
            android:translationY="310dp"/>

        <FrameLayout
            android:id="@+id/hiddenButtonForiverBuild6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:translationX="640dp"
            android:translationY="260dp"/>
        <ImageView
            android:id="@+id/buttonsForiverLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
        <ru.ralnik.clickablebutton.ClickableButton
            android:id="@+id/switcherPlans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cb_src_image="@drawable/switcher_riversky"
            app:cb_src_image_down="@drawable/switcher_foriver"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"/>
    </FrameLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fillViewport="true"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/titleOfForms">
        <ImageView
            android:id="@+id/buttonFloor5"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_floor5"
            android:tag="5"
            android:layout_marginRight="15dp"/>
        <ImageView
            android:id="@+id/buttonFloor6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_floor6"
            android:tag="6"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/buttonFloor10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@drawable/btn_floor10"
            android:tag="10" />

        <ImageView
            android:id="@+id/buttonFloor12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_floor12"
            android:tag="12"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/buttonFloor15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_floor15"
            android:tag="15"
            android:adjustViewBounds="true"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/buttonFloor16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_floor16"
            android:tag="16"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/buttonFloor17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_floor17"
            android:tag="17"
            android:adjustViewBounds="true"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/buttonFloor19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_floor19"
            android:tag="19"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/buttonFloor20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_floor20"
            android:tag="20"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/buttonFloor21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_floor21"
            android:tag="21"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/buttonFloor25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_floor25"
            android:tag="25"
            android:adjustViewBounds="true"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/buttonFloor27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_floor27"
            android:tag="27"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/buttonFloor29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_floor29"
            android:tag="29"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    </HorizontalScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg_from_window"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ellipse"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical">
            <FrameLayout
                android:id="@+id/buttonUpHidden"
                android:layout_width="200dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <FrameLayout
                android:id="@+id/buttonDownHidden"
                android:layout_width="200dp"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <FrameLayout
                android:id="@+id/buttonLeftHidden"
                android:layout_width="100dp"
                android:layout_height="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <FrameLayout
                android:id="@+id/buttonRightHidden"
                android:layout_width="100dp"
                android:layout_height="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/button_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/button_left_pressed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="MissingConstraints"/>


            <ImageView
                android:id="@+id/button_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/button_right_pressed"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/button_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/button_down_pressed"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/button_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/button_up_pressed"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ru.ralnik.clickablebutton.ClickableButton
            android:id="@+id/switcherDayNight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cb_src_image="@drawable/from_window_day"
            app:cb_src_image_down="@drawable/from_window_night"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"/>
    </FrameLayout>
</LinearLayout>