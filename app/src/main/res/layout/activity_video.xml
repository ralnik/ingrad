<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    android:orientation="vertical"
    tools:context=".activity.video.VideoActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/titleOfForms"
            android:gravity="center"
            android:text="ВИДЕО"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/button_close"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="7dp"
            app:srcCompat="@drawable/button_close" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="30dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/buttonVideo1"
                android:layout_width="@dimen/buttons_width"
                android:layout_height="@dimen/buttons_height"
                android:layout_marginRight="@dimen/buttons_marginRight"
                android:scaleType="centerCrop"
                android:src="@drawable/video_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <ImageView
                android:id="@+id/buttonVideo2"
                android:layout_width="@dimen/buttons_width"
                android:layout_height="@dimen/buttons_height"
                android:layout_marginLeft="@dimen/buttons_marginRight"
                android:scaleType="centerCrop"
                android:src="@drawable/video_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/buttonVideo1"/>
            <ImageView
                android:id="@+id/buttonVideo3"
                android:layout_width="@dimen/buttons_width"
                android:layout_height="@dimen/buttons_height"
                android:layout_marginLeft="@dimen/buttons_marginRight"
                android:scaleType="centerCrop"
                android:src="@drawable/video_3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/buttonVideo2"/>
            <ImageView
                android:id="@+id/buttonVideo4"
                android:layout_width="@dimen/buttons_width"
                android:layout_height="@dimen/buttons_height"
                android:scaleType="centerCrop"
                android:src="@drawable/video_4"
                android:layout_marginLeft="@dimen/buttons_marginRight"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/buttonVideo3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video1_title"
                android:textColor="@color/colorTitleText"
                android:fontFamily="@font/panroman"
                android:textSize="8sp"
                app:layout_constraintLeft_toLeftOf="@id/buttonVideo1"
                app:layout_constraintRight_toRightOf="@id/buttonVideo1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonVideo1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video2_title"
                android:textAlignment="center"
                android:fontFamily="@font/panroman"
                android:textColor="@color/colorTitleText"
                android:textSize="8sp"
                app:layout_constraintLeft_toLeftOf="@id/buttonVideo2"
                app:layout_constraintRight_toRightOf="@id/buttonVideo2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonVideo2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video3_title"
                android:textColor="@color/colorTitleText"
                android:textSize="8sp"
                android:fontFamily="@font/panroman"
                app:layout_constraintLeft_toLeftOf="@id/buttonVideo3"
                app:layout_constraintRight_toRightOf="@id/buttonVideo3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonVideo3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video4_title"
                android:textColor="@color/colorTitleText"
                android:textSize="8sp"
                android:fontFamily="@font/panroman"
                app:layout_constraintLeft_toLeftOf="@id/buttonVideo4"
                app:layout_constraintRight_toRightOf="@id/buttonVideo4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonVideo4"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</LinearLayout>