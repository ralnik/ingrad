<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgBG"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:src="@drawable/draw_level"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/row"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:background="@drawable/item_selector"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/colKorpus"
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="13/5"
            android:textColor="@color/colorTextListitems"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/table_splitter" />

        <TextView
            android:id="@+id/colFlat"
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="174"
            android:textColor="@color/colorTextListitems"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/table_splitter" />

        <TextView
            android:id="@+id/colFloor"
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="18"
            android:textColor="@color/colorTextListitems"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/table_splitter" />

        <TextView
            android:id="@+id/colRooms"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/colorTextListitems"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/table_splitter" />

        <TextView
            android:id="@+id/colSquare"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="123.8"
            android:textColor="@color/colorTextListitems"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/table_splitter" />

        <TextView
            android:id="@+id/colCost"
            android:layout_width="41dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1 568 000"
            android:textColor="@color/colorTextListitems"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/table_splitter" />

        <TextView
            android:id="@+id/colSrok"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-------"
            android:textColor="@color/colorTextListitems"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/table_splitter" />

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/picTownhouse"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                app:srcCompat="@drawable/button_townhouse_little" />

            <ImageView
                android:id="@+id/picPenthouse"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:visibility="visible"
                app:srcCompat="@drawable/button_penthouse_little" />

            <ImageView
                android:id="@+id/picDoubleFloorHouse"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:visibility="visible"
                app:srcCompat="@drawable/button_doublefloorhouse_little" />

            <ImageView
                android:id="@+id/picTwoEnterHouse"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:visibility="visible"
                app:srcCompat="@drawable/button_twoenterhouse_little" />

            <ImageView
                android:id="@+id/picTerrasa"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:visibility="visible"
                app:srcCompat="@drawable/button_terrasa_little" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>